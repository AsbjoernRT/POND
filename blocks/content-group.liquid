<div
  class="content-group"
  {{ block.shopify_attributes }}
  style="gap:var(--gutter-{{ block.settings.spacing }});"
>
  {% content_for 'blocks' %}
</div>

{% schema %}
{
  "name": "t:theme_blocks.group.name",
  "tag": null,
  "blocks": [
    {
      "type": "button"
    },
    {
      "type": "text"
    },
    {
      "type": "badge"
    }
  ],
  "settings": [
    {
      "type": "select",
      "id": "spacing",
      "label": "t:theme_blocks.grid-text.spacing",
      "options": [
        {
          "value": "small",
          "label": "t:theme_blocks.divider.option_1"
        },
        {
          "value": "regular",
          "label": "t:theme_blocks.divider.option_2"
        }
      ],
      "default": "small"
    }
  ],
  "presets": [
    {
      "name": "t:theme_blocks.group.name",
      "settings": {
        "spacing": "small"
      },
      "blocks": [
        {
          "type": "button",
          "settings": {
            "button_label": "View more",
            "button_style": "solid",
            "button_size": "button--small"
          }
        },
        {
          "type": "button",
          "settings": {
            "button_label": "Show more",
            "button_style": "outline",
            "button_size": "button--small"
          }
        }
      ]
    }
  ]
}
{% endschema %}
