        --color-scheme-accent: {{ section.settings.sticky_atc_color_scheme.settings.accent }};
        --color-scheme-accent-foreground: {{ section.settings.sticky_atc_color_scheme.settings.accent_foreground }};
        --color-borders-main: {{ section.settings.sticky_atc_color_scheme.settings.text | color_modify: 'alpha', 0.15 }};
      }
